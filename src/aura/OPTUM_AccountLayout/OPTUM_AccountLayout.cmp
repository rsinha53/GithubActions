<aura:component implements="lightning:recordHomeTemplate" description="OPTUMAccountLayoutComponent" access="global">
        <!--c:OPTUM_ScrollIntoView /-->   
    <aura:attribute name="left" type="Aura.Component[]" access="global" />
    <aura:attribute name="right" type="Aura.Component[]" access="global" />
    
    <div aura:id="container">
        
        <lightning:layout class="slds-m-top_x-small" multipleRows="true">  
           <lightning:layoutItem size="9" padding="around-small">
                 {!v.left}
            </lightning:layoutItem>
            <lightning:layoutItem size="3" padding="around-small">
                 {!v.right}
            </lightning:layoutItem>
        </lightning:layout>
        
    </div>
</aura:component>