<aura:component >
    <aura:attribute name="interactionCard" type="Object" access="public"/>
    
	<div class="slds-text-heading_large" style="margin-left: 3rem;"><h2><b>Interaction Overview</b></h2></div> <br/>  
     <lightning:layout multipleRows="true">
            <lightning:layoutitem padding="around-small" size="3">
                <div class="header-column">
                    <p class="field-title" title="Field 1">Tax ID (TIN)</p>
                    <p><b>{!v.interactionCard.name},&nbsp;{!v.interactionCard.taxidTIN}</b></p>
                </div>
            </lightning:layoutitem>
            <lightning:layoutitem padding="around-small" size="3">
                <div class="header-column">
                    <p class="field-title" title="Field 2">Servicing Provider</p>
                    <p><a href="javascript:void(0)"><b></b></a></p>
                </div>
            </lightning:layoutitem>
            <lightning:layoutitem padding="around-small" size="2">
                <div class="header-column">
                    <p class="field-title" title="Field 3">NPI</p>
                    <p><b>{!v.interactionCard.npi}</b></p>
                </div>
            </lightning:layoutitem>                
        </lightning:layout>
        <lightning:layout multipleRows="true">
            <lightning:layoutitem padding="around-small" size="3">
                <div class="header-column">
                    <p class="field-title" title="Field 5">Health Care System</p>
                    <p><b>{!v.interactionCard.healthCareSys}</b></p>
                </div>
            </lightning:layoutitem>
            <lightning:layoutitem padding="around-small" size="3">
                <div class="header-column">
                    <p class="field-title" title="Field 6">Primary Specialty</p>
                    <p><b></b></p>
                </div>
            </lightning:layoutitem>
            <lightning:layoutitem padding="around-small" size="2">
                <div class="header-column">
                    <p class="field-title" title="Field 7">Contact Name</p>
                    <p><b>{!v.contactName}</b></p>
                </div>
            </lightning:layoutitem>              
        </lightning:layout> 
</aura:component>